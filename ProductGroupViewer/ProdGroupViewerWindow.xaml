<Window x:Class="ProductGroupViewer.ProdGroupViewerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Product Group Viewer" Height="600" Width="450" FontWeight="ExtraLight">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SymphonyConductor;component/Resources/Converters.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid Background="Azure">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Border>
            <StackPanel Orientation="Horizontal">
                <Label Margin="25,10 15,10">Key Code</Label>
                <TextBox Text="{Binding Path=CodeValue}" Margin="0,15,15,15" MaxLength="3" Width="40" CharacterCasing="Upper"></TextBox>
                <Label Margin="15,10 15,10">Key Description</Label>
                <TextBox Text="{Binding Path=DescrValue}" Margin="0,15,15,15" MaxLength="20" Width="115" CharacterCasing="Upper"></TextBox>
            </StackPanel>
        </Border>

        <Border Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding Path=KeyMatch}" Margin="25,15,10,15" VerticalAlignment="Center">Match on whole key?</CheckBox>
                <Button Command="{Binding Path=SearchCommand}" Margin="110,15,15,15" Padding="5" Width="50" Background="Red" FontWeight="Medium">Search</Button>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="2" Margin="4" Padding="4" BorderThickness="0" Background="Aqua" ItemsSource="{Binding Path=ProductGroupList}" AutoGenerateColumns="False" 
                  IsReadOnly="True" SelectedItem="{Binding Path=SelectedProdGroup}">
                           
            <DataGrid.Columns>
                <DataGridTextColumn Header="Code" Binding="{Binding Path=Prod_group}" Width="60" ></DataGridTextColumn>
                <DataGridTextColumn Header="Name" Binding="{Binding Path=Group_desc}" Width="*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="125" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Label  Margin="5" VerticalAlignment="Center">Product Group Code</Label>
                
                <TextBox Grid.Column="1" Text="{Binding Path=SelectedProdGroup.Prod_group, Converter={StaticResource alphaConverter}}" 
                    Width="50"  Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center" CharacterCasing="Upper" IsReadOnly="True">
                </TextBox>
                   
                <Label  Grid.Row="1" Margin="5" VerticalAlignment="Center">Product Group Name</Label>
                 
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Path=SelectedProdGroup.Group_desc, Converter={StaticResource alphaConverter}}" 
                    Width="120" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center" CharacterCasing="Upper" IsReadOnly="True">
                </TextBox>
                          
            </Grid>
                        
        </Border>
        
    </Grid>
</Window>
