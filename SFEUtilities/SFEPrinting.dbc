		public static property LinesLeft, int
			method get
			proc
				if mReportType == 'R' then
				begin
					data rowHeight	,int
					
					rowHeight = wpr_info(mHandle, DWP_TEXTHEIGHT, 'X')
					mLinesLeft = (mPageLength - mPosY - mBottomMargin)/rowHeight
				end
				else
				begin
				end

				mreturn mLinesLeft
			endmethod
			method set
			proc
				mLinesLeft = value
			endmethod
			
