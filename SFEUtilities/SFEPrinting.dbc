				begin
					using fontColor select
					("grey"), wpr_setdevice(mHandle,DWP_TEXTCOLOR,m_rgb(180,180,180))
					("blue"), wpr_setdevice(mHandle,DWP_TEXTCOLOR,m_rgb(0,0,255))
